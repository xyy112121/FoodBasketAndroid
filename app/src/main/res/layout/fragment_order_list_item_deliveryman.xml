<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/my_text_style"
                android:layout_width="80dp"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:text="订单号"
                android:textColor="@color/tab_text_normal"
                android:textSize="16sp" />

            <TextView
                style="@style/my_right_text_style1"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:text="55555555555"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@+id/order_item_contactperson_tv"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="收货人"
                android:textColor="@color/tab_text_normal"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_item_contactperson_name_tv"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/order_item_contactperson_tv"
                android:text="蟹老板"
                android:textColor="@color/tab_text_normal"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/addr_item_contactmobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="13898716301"
                android:textColor="@color/tab_text_normal"
                android:textSize="18sp" />

        </RelativeLayout>

        <View
            style="@style/horizontal_view"
            android:layout_marginTop="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/my_text_style"
                android:layout_width="100dp"
                android:paddingBottom="5dp"
                android:paddingLeft="8dp"
                android:text="收货地址"
                android:textColor="@color/tab_text_normal"
                android:textSize="16sp" />

            <TextView
                style="@style/my_right_text_style1"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:text="收货地址收货地址"
                android:textColor="@color/tab_text_normal"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="发货时间"
                android:textColor="@color/tab_text_normal"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="55555555555"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

        </LinearLayout>

        <View
            style="@style/horizontal_view"
            android:layout_marginTop="8dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">

            <TextView
                android:id="@+id/order_item_logistics_tv"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="物流"
                android:textColor="@color/tab_text_normal"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_item_logistics_value_tv"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/order_item_logistics_tv"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="已发货"
                android:textColor="@color/text_color1"
                android:textSize="18sp" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="#FEE42D"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="查看详情"
                android:textColor="@color/tab_text_normal"
                android:textSize="18sp" />

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>