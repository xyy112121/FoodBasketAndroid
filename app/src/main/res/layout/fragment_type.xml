<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/page_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_history_cancel"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:src="@mipmap/icon_logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_marginRight="8dp"
            android:layout_weight="0.8"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_bg_blue_frame"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/expert_search_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:drawableLeft="@mipmap/icon_search"
                android:drawablePadding="8dp"
                android:hint="输入产品名称"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/home_top_parent_ll"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <ImageView
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"
                android:src="@mipmap/icon_more" />

        </LinearLayout>
    </HorizontalScrollView>

    <View
        style="@style/horizontal_view"
       />

    <FrameLayout
        android:id="@+id/type_content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>