<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_base_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topbar"
        android:layout_marginBottom="51dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/my_text_style"
                    android:layout_width="wrap_content"
                    android:paddingLeft="8dp"
                    android:text="订单号："

                    android:textColor="@color/text_color" />

                <TextView
                    style="@style/my_right_text_style1"
                    android:layout_marginRight="5dp"
                    android:ellipsize="end"
                    android:hint="11111111111111111111111"
                    android:maxLines="1"
                    android:textColor="@color/tab_text_normal"
                    android:textSize="18sp" />

            </LinearLayout>

            <View style="@style/horizontal_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <include layout="@layout/activity_order_confirm_item" />

                <include layout="@layout/activity_order_confirm_item" />

                <include layout="@layout/activity_order_confirm_item" />
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="优惠券"
                    android:textColor="@color/tab_text_normal"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="8dp"
                    android:text="满188减100"
                    android:textColor="@color/text_color1"
                    android:textSize="16sp" />
            </RelativeLayout>

            <View style="@style/horizontal_view" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/order_info_statue_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="收货状态"
                    android:textColor="@color/tab_text_normal"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/order_info_statue_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/button"
                    android:layout_marginEnd="110dp"
                    android:padding="8dp"
                    android:text="待收货"
                    android:textColor="@color/tab_text_normal"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/order_info_statue_value_tv"
                    android:background="@drawable/btn_bg_red2"
                    android:text="确认付款"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View style="@style/horizontal_view" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>