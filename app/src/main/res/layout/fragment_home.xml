<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/page_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_history_cancel"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingTop="5dp"
            android:src="@mipmap/icon_logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.8"
            android:background="@drawable/btn_bg_blue_frame"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expert_search_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:drawableLeft="@mipmap/icon_search"
                android:drawablePadding="8dp"
                android:hint="输入产品名称"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/search_history_me"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:padding="8dp"
            android:src="@mipmap/icon_message" />


    </LinearLayout>

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/rl_recyclerview_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <View
                        style="@style/vertical_view"
                        android:layout_height="20dp"
                        android:layout_width="5dp"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="精品推荐"
                        android:textColor="@color/tab_text_normal"
                        android:textSize="16sp" />
                </LinearLayout>

                <!--精品推荐-->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <LinearLayout

                        android:id="@+id/home_head_parent_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">


                    </LinearLayout>

                </HorizontalScrollView>

                <!--特惠标题-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:background="#EDEDED"
                    android:gravity="center_vertical">

                    <View
                        style="@style/horizontal_view"
                        android:layout_weight="1"
                        android:background="#E2E2E2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="特惠商品"
                        android:textColor="@color/tab_text_normal"
                        android:textSize="16sp" />

                    <View
                        style="@style/horizontal_view"
                        android:layout_weight="1"
                        android:background="#E2E2E2" />
                </LinearLayout>

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none" />
        </LinearLayout>


    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>

</LinearLayout>