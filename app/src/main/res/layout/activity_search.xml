<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="0.8"
            android:background="@drawable/btn_bg_blue_frame"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/search_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:drawableLeft="@mipmap/icon_search"
                android:drawablePadding="8dp"
                android:hint="输入产品名称"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/search_cancel"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/tab_text_normal"
            android:textSize="18sp" />
    </LinearLayout>

    <View style="@style/horizontal_view" />

    <TextView
        android:id="@+id/search_hot_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="5dp"
        android:background="@color/bg_color"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="热门搜索"
        android:textColor="@color/tab_text_normal"
        android:textSize="16sp" />


    <com.foodBasket.view.WaroLinearLayout
        android:id="@+id/search_hot_parent_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        app:grivate="left"
        app:horizontal_Space="10dp"
        app:isFull="false"
        app:vertical_Space="10dp">

    </com.foodBasket.view.WaroLinearLayout>

    <TextView
        android:id="@+id/search_history_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="5dp"
        android:background="@color/bg_color"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="历史搜索"
        android:textColor="@color/tab_text_normal"
        android:textSize="16sp" />


    <com.foodBasket.view.WaroLinearLayout
        android:id="@+id/search_parent_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        app:grivate="left"
        app:horizontal_Space="10dp"
        app:isFull="false"
        app:vertical_Space="10dp">

    </com.foodBasket.view.WaroLinearLayout>


    <TextView
        android:id="@+id/search_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@color/text_color"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:text="清除历史搜索"
        android:textColor="@color/tab_text_normal"
        android:visibility="gone" />


</LinearLayout>