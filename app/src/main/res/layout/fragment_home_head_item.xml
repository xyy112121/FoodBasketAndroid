<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/home_head_item_parent_layout"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg_gray_frame2"
        android:layout_marginLeft="8dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="10dp"
      >

        <ImageView
            android:id="@+id/item_recommend_picture_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_default" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_recommend_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="名称"
                    android:textColor="@color/text_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_recommend_summary_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="描述描述描述描述"
                    android:textColor="#B6B6B6"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/item_recommend_alias_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="新品"
                    android:textColor="@color/blue"
                    android:textSize="13sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/item_recommend_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="3dp"
                    android:text="￥12.5/kg"
                    android:textColor="@color/text_color1"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/item_recommend_add_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_add_cart" />
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    </RelativeLayout>
</FrameLayout>