<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include layout="@layout/activity_base_top" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topbar"
        android:layout_marginBottom="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--图片显示-->
            <com.bigkoo.convenientbanner.ConvenientBanner
                android:id="@+id/detail_banner"
                android:layout_width="match_parent"
                android:layout_height="160dp" />

            <!--商品信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:text="商品名称"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:id="@+id/goods_info_fl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_banner"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/goods_info_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我可是销量Top1"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="产地云南昆明"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detail_banner"
                    android:layout_margin="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥45/kg"
                        android:textColor="@color/text_color1"
                        android:paddingLeft="8dp"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="已售63"
                        android:textColor="@color/text_color"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View style="@style/horizontal_view" />

                <com.foodBasket.view.TextRowView
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    app:TextRowViewGravity="1"
                    app:TextRowViewIsBottomLineShow="true"
                    app:TextRowViewLeftWidth="100dp"
                    app:TextRowViewRightTextColor="@color/text_color"
                    app:TextRowViewState="read"
                    app:TextRowViewText="生成日期"
                    app:TextRowViewTextColor="@color/tab_text_normal" />

                <com.foodBasket.view.TextRowView
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    app:TextRowViewGravity="1"
                    app:TextRowViewIsBottomLineShow="true"
                    app:TextRowViewLeftWidth="120dp"
                    app:TextRowViewRightTextColor="@color/text_color"
                    app:TextRowViewState="read"
                    app:TextRowViewText="剩余保存时间"
                    app:TextRowViewTextColor="@color/tab_text_normal" />

                <View
                    style="@style/horizontal_view"
                    android:layout_height="8dp"
                    android:background="@color/interval_color" />

            </LinearLayout>

            <!--完美搭配-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="完美搭配"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <include layout="@layout/activity_goods_info_match_item" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <include layout="@layout/activity_goods_info_match_item" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="+"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1">

                    <include layout="@layout/activity_goods_info_match_item" />
                </RelativeLayout>
            </LinearLayout>

            <View
                style="@style/horizontal_view"
                android:layout_height="8dp"
                android:layout_marginBottom="8dp" />
            <!--规格-->

            <TextView
                style="@style/my_text_style"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:paddingLeft="8dp"
                android:text="规格"
                android:textColor="@color/tab_text_normal"
                android:textSize="18sp" />

            <View style="@style/horizontal_view" />

            <com.foodBasket.view.TextRowView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                app:TextRowViewGravity="1"
                app:TextRowViewIsBottomLineShow="true"
                app:TextRowViewLeftWidth="100dp"
                app:TextRowViewRightTextColor="@color/text_color"
                app:TextRowViewState="read"
                app:TextRowViewText="净含量"
                app:TextRowViewTextColor="@color/tab_text_normal" />

            <com.foodBasket.view.TextRowView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                app:TextRowViewGravity="1"
                app:TextRowViewIsBottomLineShow="true"
                app:TextRowViewLeftWidth="100dp"
                app:TextRowViewRightTextColor="@color/text_color"
                app:TextRowViewState="read"
                app:TextRowViewText="保存条件"
                app:TextRowViewTextColor="@color/tab_text_normal" />

            <com.foodBasket.view.TextRowView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                app:TextRowViewGravity="1"
                app:TextRowViewIsBottomLineShow="true"
                app:TextRowViewLeftWidth="100dp"
                app:TextRowViewRightTextColor="@color/text_color"
                app:TextRowViewState="read"
                app:TextRowViewText="品牌"
                app:TextRowViewTextColor="@color/tab_text_normal" />

            <com.foodBasket.view.TextRowView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                app:TextRowViewGravity="1"
                app:TextRowViewIsBottomLineShow="true"
                app:TextRowViewLeftWidth="100dp"
                app:TextRowViewRightTextColor="@color/text_color"
                app:TextRowViewState="read"
                app:TextRowViewText="产地"
                app:TextRowViewTextColor="@color/tab_text_normal" />

            <com.foodBasket.view.TextRowView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                app:TextRowViewGravity="1"
                app:TextRowViewIsBottomLineShow="true"
                app:TextRowViewLeftWidth="100dp"
                app:TextRowViewRightTextColor="@color/text_color"
                app:TextRowViewState="read"
                app:TextRowViewText="质量等级"
                app:TextRowViewTextColor="@color/tab_text_normal" />

            <View
                style="@style/horizontal_view"
                android:layout_height="8dp"
                android:layout_marginBottom="8dp" />

            <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="WebViewLayout" />
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/tv_go_to_pay_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical|left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_shopcar_true" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_go_to_pay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/blue"
            android:clickable="true"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

    </LinearLayout>
</RelativeLayout>