<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    android:background="#EDEDED"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_item_parent_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
       >

        <ImageView
            android:id="@+id/item_picture_iv"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_default" />

        <me.grantland.widget.AutofitTextView
            android:id="@+id/item_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:text="名称"
            android:singleLine="true"
            android:maxLines="2"
            autofit:minTextSize="6sp"
            android:textColor="@color/tab_text_normal"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/item_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:text="￥12.5/kg"
                android:textColor="@color/text_color1"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/item_add_iv"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_add_cart" />
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>